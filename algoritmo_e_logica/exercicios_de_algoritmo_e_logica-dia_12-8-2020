---------------------TODOS OS EXERCICIOS FORAM FEITOS EM VISUALG--------------------------
Algoritmo "aula 07-08 exe1"

Var
  n, s, divisor: inteiro
  result: real

Inicio
   divisor <- 1003
   s <- 0
   Escreval("Informe nos até qual número da sequência")
   Leia(n)
   enquanto (s <> n) faca
      divisor <- divisor - 3
      s <- s + 1
      se (s % 2 <> 0) entao
         result <- result - (divisor / s)
         senao
            result <- result + (divisor / s)
      fimse
   fimenquanto
   Escreval (-result)

Fimalgoritmo
